@page
@model Rubrica.Pages.DetailsModel

<div class="row py-3">
    <div class="col-12">
        <h1>Visualizza</h1>
    </div>
</div>
<div class="row pt-2">
    <div class="col-12">
        @foreach (var item in Model.Contatto.GetType().GetProperties().Where(x => x.Name != "Id"))
        {
            <div class="row py-2">
                <div class="col-2 fw-bold">
                    @item.Name
                </div>
                <div class="col-10">
                    @(item.Name == "Sesso" ? (item.GetValue(Model.Contatto)!.Equals("M") ? "Maschio" : "Femmina") : item.GetValue(Model.Contatto))
                </div>
            </div>
        }
    </div>
</div>
<div class="row pt-4">
    <div class="col-12">
        <a asp-page="./Edit" asp-route-id="@Model.Contatto.Id" class="btn btn-primary">Modifica</a>
        <a asp-page="./Index" class="btn btn-primary">Torna alla lista</a>
    </div>
</div>
